<MudGrid Spacing="5" Justify="Justify.Center">
    <MudItem>
        <MudPaper Height="1px" Width="1px"/>
    </MudItem>
    <MudItem  class="mx-auto pa-16">
        <MudPaper Height="200px" Class="mud-theme-primary" Style="overflow:hidden; position:relative;">
            <MudDrawerContainer Class="mud-height-full">
                <MudDrawer @bind-Open="@openStart" Anchor="Anchor.Start" Elevation="0" Variant="@DrawerVariant.Persistent">
                    <MudNavMenu>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Creative thinking</MudNavLink>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Good communication skills</MudNavLink>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Ability to work individually and with other team members in a collaborative manner</MudNavLink>
                    </MudNavMenu>
                </MudDrawer>
                <MudDrawer @bind-Open="@openEnd" Fixed="false" Anchor="Anchor.End" Elevation="0" Variant="@DrawerVariant.Persistent">
                    <MudNavMenu>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Proficiency in OOP</MudNavLink>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Good knowlage and understanding of various design pattrerns</MudNavLink>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">Exellent debugging skills</MudNavLink>
                        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Star">S.O.L.I.D coding practices</MudNavLink>
                    </MudNavMenu>
                </MudDrawer>
                <div class="d-flex justify-center align-center mud-height-full">
                    <MudButton Color="Color.Inherit" OnClick="@ToggleStartDrawer" StartIcon="@(Rtl ? Icons.Material.Filled.East : Icons.Material.Filled.West)" Class="mx-2">Soft Skills</MudButton>
                    <MudButton Color="Color.Inherit" OnClick="@ToggleEndDrawer" EndIcon="@(Rtl ? Icons.Material.Filled.West : Icons.Material.Filled.East)" Class="mx-2">hard Skills</MudButton>
                </div>
            </MudDrawerContainer>
        </MudPaper>
    </MudItem>
    <MudItem>
        <MudPaper Height="1px" Width="1px" />
    </MudItem>
